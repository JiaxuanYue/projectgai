<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/dialog_shape_indigo"
    style="@style/bkg_indigo">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="What would you do?"
        android:textSize="24dp"
        android:textColor="#fafafa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="20dp">

        <Button
        android:id="@+id/btn_dialog_check_dvd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="Check this DVD"
        android:textColor="#3B8887"
        android:background="@drawable/button_shape_white"
        style="@style/bkg_white"
        />
        <Button
            android:id="@+id/btn_dialog_dismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#3B8887"
            style="@style/bkg_white"
            android:background="@drawable/button_shape_white"
            android:text="Close"
            />
    </LinearLayout>


</LinearLayout>