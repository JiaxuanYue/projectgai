<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- This is the styling for action bar -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!--To change the text styling of options menu items</item>-->
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <!--To change the background of options menu-->
        <item name="android:itemBackground">@color/brown</item>
    </style>

    <style name="font_black" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#0a0a0a</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="font_white" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#fafafa</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="font_title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#fafafa</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="font_indigo" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#3B8887</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bkg_brown">
        <item name="android:background">#663525</item>
    </style>
    <style name="bkg_white">
        <item name="android:background">#fffff3</item>
    </style>

    <style name="bkg_indigo">
        <item name="android:background">#388887</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/red</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyActionBar.MenuTextStyle"
        parent="style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>
